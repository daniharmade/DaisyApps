<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Image Section -->
        <ImageView
            android:id="@+id/iv_history"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="History Image"
            android:scaleType="centerCrop"
            android:src="@drawable/background_home" />

        <!-- Text Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tv_history_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Psoriasis"
                android:textColor="#FF0000"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_history_suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See a doctor immediately!"
                android:textColor="#000000"
                android:fontFamily="@font/poppins"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Delete Button -->
        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Delete Icon"
            android:src="@drawable/ic_delete"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
